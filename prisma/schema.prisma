// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model BodyPart {
  id          Int       @id @default(autoincrement())
  name        String
  image       Bytes
  createdAt   DateTime  @default(now())
  anchorX     Int
  anchorY     Int
  partType    PartType
  bodyTypes   BodyType[]
  outfit      Outfit    @relation(fields: [outfitID], references: [id])
  outfitID    Int
}

model Outfit {
  id      Int @id @default(autoincrement())
  parts   BodyPart[]
  name    String
}

model BodyLayout {
  bodyType  BodyType
  partType  PartType
  anchorX   Int
  anchorY   Int
  @@id([bodyType, partType])
}

enum PartType {
  Head
  Body
  LeftLeg
  RightLeg
  LeftArm
  RightArm
  Hair
  Eyes
  FacialHair
  FaceAccessory
  HairAccessory
}

enum BodyType {
  Small
  Medium
  Large
}
