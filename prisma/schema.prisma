generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("SUPABASE_POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model BodyPart {
  name        String
  src         String
  createdAt   DateTime  @default(now())
  anchorX     Int
  anchorY     Int
  partType    PartType
  outfit      Outfit    @relation(fields: [outfitID], references: [id])
  outfitID    Int
  @@id([outfitID, partType])
}

model Outfit {
  id          Int       @id @default(autoincrement())
  parts       BodyPart[]
  name        String
  bodyTypes   BodyType[]
  outfitType  OutfitType
}

model BodyLayout {
  bodyType    BodyType
  partType    PartType
  anchorX     Int
  anchorY     Int
  @@id([bodyType, partType])
}

enum PartType {
  Head
  Body
  LeftLeg
  RightLeg
  LeftArm
  RightArm
  Hair
  Eyes
  FacialHair
  FaceAccessory
  HairAccessory
}

enum BodyType {
  MediumHumanoid
}

enum OutfitType {
  Body            // Head,FaceAccessory, Eyes, FacialHair Eyes, Body, Legs, Arms
  Pants           // Legs
  Top             // Body, Arms
  Hair            // Hair
  Vest            // Body
  Robes           // Arms, Body, Legs
  FacialHair      // FacialHair
  FaceAccessory   // FaceAccessory
  HairAccessory   // HairAccessory
  Mask            // FaceAccessory, Eyes, FacialHair
  Helmet          // FaceAccessory, Eyes, FacialHair, Hair
  ArmAccessory    // Arms
}

// 
// Treasure Hauls
// 
// 

enum BaseItemType {
  Weapon
  Armor
  MagicItem
  Treasure
  Consumable
}

model TreasureHaul {
  id          String @id @default(uuid()) @db.Uuid
  item        Json
  chat        Json
}

model Player {
  publicID    String @id @default(uuid()) @db.Uuid
  privateID   String @default(uuid()) @db.Uuid
  name        String
}

model Tag {
  id          String @id @default(uuid()) @db.Uuid
  tag         String
  items       BaseItem[]
}

model BaseItem {
  id          String @id @default(uuid()) @db.Uuid
  name        String
  type        BaseItemType
  src         String
  tags        Tag[]
}
